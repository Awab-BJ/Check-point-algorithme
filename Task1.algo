ALGORITHM Task1
VAR
    s:STRING[50]
    c:CHAR
    i,w,v:INTEGER
BEGIN
    w:=0;
    v:=0;
    REPEAT
        Write ("Donnez le caract√©re")
        Read( c )
        s:=concat(s,c)
    UNTIL ( c <> '.' )
    FOR i FROM 0 TO length.s-1 STEP 1  DO 
        IF (s[i]=' ') THEN
            w:=w+1 ;
        END_IF
        IF (s[i]='a' or s[i]='e' or s[i]='i' or s[i]='o' or s[i]='u' or s[i]='y' ) THEN
            v:=v+1 ;
        END_IF
    END_FOR
END